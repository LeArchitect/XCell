<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/background">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/background">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/blue_action_bar"
                android:layout_height="30dp">
            <ImageButton
                    android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
                    android:id="@+id/imageButton6" android:layout_weight="1" android:background="@color/blue_action_bar"
                    android:layout_width="wrap_content"/>
            <Space
                    android:layout_width="380dp"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/blue_action_bar"
                android:layout_height="match_parent">
            <TextView
                    android:text="Play music"
                    android:layout_width="224dp"
                    android:layout_height="50dp" android:id="@+id/textView" android:layout_weight="1"
                    android:textSize="20dp" android:paddingLeft="20dp" android:paddingTop="10dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_wrench"
                    android:id="@+id/ConfSettings" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_delete"
                    android:id="@+id/DeleteConfiguration" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/blue_action_bar"
                android:layout_height="match_parent">
            <TextView
                    android:text="Shut off lights"
                    android:layout_width="224dp"
                    android:layout_height="50dp" android:id="@+id/textView2" android:layout_weight="1"
                    android:textSize="20dp" android:paddingLeft="20dp" android:paddingTop="10dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_wrench"
                    android:id="@+id/ConfSettings2" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_delete"
                    android:id="@+id/DeleteConfiguration2" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/blue_action_bar"
                android:layout_height="match_parent">
            <TextView
                    android:text="Warm thermostat"
                    android:layout_width="224dp"
                    android:layout_height="50dp" android:id="@+id/textView3" android:layout_weight="1"
                    android:textSize="20dp" android:paddingLeft="20dp" android:paddingTop="10dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_wrench"
                    android:id="@+id/ConfSettings3" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_delete"
                    android:id="@+id/DeleteConfiguration3" android:layout_weight="1"
                    android:background="@color/blue_action_bar"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

    </LinearLayout>
</ScrollView>