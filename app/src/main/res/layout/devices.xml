<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/background"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
            android:id="@+id/linear_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="2dp">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue7"
                app:srcCompat="?attr/actionModeCloseDrawable" />
    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/space_1"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_container"
    />

    <LinearLayout
            android:id="@+id/kitchen_counter_lamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/space_1"
          >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen counter lamp"
                android:textSize="20dp" />

        <Switch
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/space_2"
            app:layout_constraintTop_toBottomOf="@id/kitchen_counter_lamp"
    />

    <LinearLayout
            android:id="@+id/thermos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/space_2">

        <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue7"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/therm_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:text="Thermostat"
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="24Â°C"
                    android:textAlignment="viewEnd"
                    android:textSize="20dp" />
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/space"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_container"
        />

        <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue7"
                android:padding="20dp" />


    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/space_3"
            app:layout_constraintTop_toBottomOf="@id/thermos_layout"
    />


    <LinearLayout
            android:id="@+id/kitchen_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/space_3">
        <TextView
                android:id="@+id/kitchen_lighting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen lighting"
                android:textSize="20dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="20dp"
                android:text="34%"
                android:textAlignment="viewEnd" />
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/space_4"
            app:layout_constraintTop_toBottomOf="@id/kitchen_light"
    />

    <LinearLayout
            android:id="@+id/soundsystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:orientation="horizontal"

            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/space_4">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Soundsystem"
                android:padding="5dp"
                android:textSize="20dp" />

        <Switch
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/space_5"
            app:layout_constraintTop_toBottomOf="@id/soundsystem"
    />

    <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            app:layout_constraintTop_toBottomOf="@id/space_5"
            app:srcCompat="@drawable/plus"/>

</android.support.constraint.ConstraintLayout>