<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
            android:id="@+id/linear_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="2dp">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue7"
                android:src="@drawable/arrow" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/kitchen_counter_lamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue5"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_container"
          >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen counter lamp"
                android:textSize="20dp" />

        <Switch
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/thermos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/kitchen_counter_lamp">

        <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue5"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/therm_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:text="Thermostat"
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="24Â°C"
                    android:textSize="20dp" />
        </LinearLayout>

        <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue5"
                android:padding="20dp" />


    </LinearLayout>


    <LinearLayout
            android:id="@+id/kitchen_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue5"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/thermos_layout">
        <TextView
                android:id="@+id/kitchen_lighting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen lighting"
                android:textSize="20dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="34%"
                android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/soundsystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue5"
            android:orientation="horizontal"

            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/kitchen_light">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Soundsystem"
                android:padding="5dp"
                android:textSize="20dp" />

        <Switch
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

    </LinearLayout>


    <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue5"
            app:layout_constraintTop_toBottomOf="@id/soundsystem"
            app:srcCompat="@drawable/plus"/>

</android.support.constraint.ConstraintLayout>