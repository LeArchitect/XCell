<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/parent_layout_edit_configurations"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/light_bar_layout"
                    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:text="Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLightBar"
                    android:textSize="25dp"
                    android:layout_weight="1"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:text="5%"
                      android:id="@+id/seekbar_value_editconfs"
                      android:textAlignment="viewEnd"
                      android:textSize="25dp"
                        />


        </LinearLayout>
        <SeekBar android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/light_intensity_bar"
                                                    />



    </LinearLayout>
     <Space android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:id="@+id/light_bool_layout"
    >
        <TextView
                android:text="Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textLightBool"
                android:textSize="25dp"
                android:layout_weight="1"
        />
        <Switch
                android:text="Switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:id="@+id/switch_bool_light"
                android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>
