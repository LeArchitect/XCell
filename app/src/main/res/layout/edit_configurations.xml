<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:background="@color/background">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp" android:background="@color/blue_action_bar">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="?attr/actionModeCloseDrawable"
                android:id="@+id/buttonBack" android:background="@color/blue_action_bar"/>
    </FrameLayout>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="128dp" android:background="@color/blue7">

        <TextView
                android:text="Clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textClock"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.086"/>
        <TextView
                android:text="From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textClock2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintVertical_bias="0.505" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textStartTime" app:layout_constraintHorizontal_bias="0.222"/>
        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/textStartTime"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.297" app:layout_constraintVertical_bias="0.515"/>
        <TextView
                android:text="to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.569"
                app:layout_constraintVertical_bias="0.505"/>
        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/textEndTime" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/textClock2" app:layout_constraintHorizontal_bias="0.876"/>
    </android.support.constraint.ConstraintLayout>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="128dp" android:background="@color/blue7">

        <TextView
                android:text="Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textLight" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.086"/>
        <SeekBar
                android:layout_width="354dp"
                android:layout_height="39dp"
                android:id="@+id/barLightLevel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.914"/>
        <TextView
                android:text="Set to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textLight2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.397"/>
    </android.support.constraint.ConstraintLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="128dp" android:background="@color/blue7">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/plus" android:id="@+id/buttonNew"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:background="@color/blue7"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
