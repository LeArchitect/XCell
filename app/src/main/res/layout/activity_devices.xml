<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".devices">
    <include
            android:id="@+id/custom_bar"
            layout = "@layout/custom_bar">
    </include>
    <android.support.v7.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/rooms_list"
          app:layout_constraintTop_toBottomOf="@id/custom_bar"
                                        >
  </android.support.v7.widget.RecyclerView>
    <ImageButton android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/rooms_list"
                 android:src="@drawable/plus"
                 android:background="@color/blue7"
                 android:onClick="addItem"
    />

</android.support.constraint.ConstraintLayout>