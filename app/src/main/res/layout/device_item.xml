<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:orientation="vertical"
              android:id="@+id/parent_layout_devices"
>
    <LinearLayout
            android:id="@+id/switch_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"

    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen counter lamp"
                android:id="@+id/switch_button_layout_text"
                android:textSize="20dp" />

        <Switch
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switch_button_layout_switch"
                android:layout_weight="1" />

    </LinearLayout>



    <LinearLayout
            android:id="@+id/seek_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp"
            >

        <LinearLayout
                android:id="@+id/seek_bar_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue7"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/seek_bar_layout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:text="Thermostat"
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/seek_bar_layout_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="24Â°C"
                    android:textAlignment="viewEnd"
                    android:textSize="20dp" />
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/space"

        />

        <SeekBar
                android:id="@+id/seek_bar_layout_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue6"
                android:padding="5dp"
        />


    </LinearLayout>



    <LinearLayout
            android:id="@+id/clickable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue7"
            android:layout_marginBottom="2dp"
            >
        <TextView
                android:id="@+id/clickable_layout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Kitchen lighting"
                android:textSize="20dp" />

        <TextView
                android:id="@+id/clickable_layout_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="20dp"
                android:text="34%"
                android:textAlignment="viewEnd" />
    </LinearLayout>
</LinearLayout>
